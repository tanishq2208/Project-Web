<% layout('layouts/boilerplate')%>

<div class="row">
    <h1 class="text-center">New Destination</h1>
    <div class="col-6 offset-3">
        <form action="/destinations" method="POST" novalidate class="validated-form">
            <div>
                <label class="form-label" for="title">Titles</label>
                <input class="form-control" type="text" id="title" name="destination[title]" required>
                <div class="valid-feedback">Looks Good</div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Locations</label>
                <input class="form-control" type="text" id="location" name="destination[location]" required>
                <div class="valid-feedback">Looks Good</div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="image">Image Url</label>
                <input class="form-control" type="text" id="image" name="destination[image]" required>
                <div class="valid-feedback">Looks Good</div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Price</label>
                <div class="input-group mb-3">
                    <span class="input-group-text" id="basic-addon1">$</span>
                    <input type="text" class="form-control" placeholder="0.00" aria-label="Username" aria-describedby="basic-addon1" name="destination[price]" required>
                    <div class="valid-feedback">Looks Good</div>
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="" id="location" name="destination[description]" required></textarea>
                <div class="valid-feedback">Looks Good</div>
            </div>
            <div class="mb-3">
                <button class="btn btn-success">Add destination</button>
            </div>
            <div class="mb-3">
                <a href="/destinations">All Destinations</a>
            </div>
        </form>
    </div>