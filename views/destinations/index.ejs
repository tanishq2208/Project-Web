<% layout('layouts/boilerplate')%>
<h1>All Destinations</h1>
    <div>
        <h3><a class="btn btn-lg btn-primary" href="/destinations/new">Add New Destination</a></h3>
    </div>
    <ul>
        <% for(let destination of destinations) {%>
            <div class="card mb-3">
                <div class="row">
                    <div class="col-md-4">
                        <img class="img-fluid" src="<%= destination.image %>" alt="">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title"><%=destination.title%></h5>
                            <p class="card-text"><%=destination.description%></p>
                            <p class="card-text"><small class="text-muted"><%= destination.location %></small></p>
                            <a class="btn btn-primary" href="/destinations/<%= destination._id %>"><%= destination.title %></a>
                        </div>
                    </div>
                </div>
            </div>
        <% } %>
    </ul>